<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" charset="utf-8" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="../../stylesheet.css" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="js/dw_paus_scroller.js" type="text/javascript"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
</head>

<body>
    <div class="page">
        <header>
        <div class="top-content">
                <nav class="account_nav">
                    <ul>
                        <li>@Html.Partial("_AdminLoggedOn")</li>
                        <li>@Html.Partial("_MyAccountButton")</li>
                        <li><a href="@Url.Action("Index", "ShoppingCart")">My Cart</a></li>
                        <li>@Html.ActionLink("Checkout", "Payment", "Checkout")</li>
                        
                        <li>@Html.Partial("_LogOnPartial")</li>
                    </ul>
                </nav>

                <div class="nav_wrapper">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")"><img src="../../Content/themes/base/images/BigEventLogo.png" /></a>
                    </div>
                    <div class="nav">
                        <nav>
                            <ul>
                                <li><a href="@Url.Action("Index", "Home")"><div class="Home"><img src="../../Content/themes/base/images/Home.png"></div></a></li>
                                <li><a href="@Url.Action("Index", "Store")"><div class="Tickets"><img src="../../Content/themes/base/images/Tickets.png"></div></a></li>
                                <li><a href="@Url.Action("Index", "Athletes")"><div class="Athletes"><img src="../../Content/themes/base/images/Athletes.png"></div></a></li>
                                <li><a href="@Url.Action("Index", "Contact")"><div class="Contact_Us"><img src="../../Content/themes/base/images/Contact_Us.png"></div></a></li>
                                <li><a href="@Url.Action("Index", "Accessibility")"><div class="Accessibility"><img src="../../Content/themes/base/images/Accessibility.png"></div></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>

                <div class="search_and_cart_wrapper">
                    <div class="search_bar">
                        @using (Html.BeginForm("Index", "Store", FormMethod.Get))
                    {
                    
                    @Html.TextBox("searchString") <br />
                   
                    
}
                    </div>

                    <div class="cart">
                        My Cart: <a>@{Html.RenderAction("CartSummary", "ShoppingCart");} </a><a href="@Url.Action("Index", "ShoppingCart")"><img src="../../Content/themes/base/images/cart.png"></a>
</div>
                </div>
            </div>
        </header></div>
        <section id="wrapper">
            @RenderBody()
        </section>



                <div id="container">
            <div id="header"></div>
            <div id="body"></div>
                    <div id="footer">

        <footer>
                 <div class="info">

                    <ul>
                        <li>Information</li>
                        <li>About Us</li>
                        <li>Customer Service</li>
                        <li>Site Map</li>
                    </ul>
                </div>
                <div class="social">
                    <ul>
                        <li>Social Media</li>
                        <li>Facebook</li>
                        <li>Youtube</li>
                        <li>Twitter</li>
                    </ul>
                </div>
                <div class="myaccount">
                    <ul>
                        <li>@Html.Partial("_MyAccountButton2")</li>
                        <li>@Html.Partial("_LogOnPartial")</li>
                        <li>@Html.ActionLink("My Orders", "OrderDetails", "Order")</li>
                        <li>@Html.ActionLink("View Cart", "Index", "ShoppingCart")</li>
                    </ul>
                </div>
                <div class="copyright">
                    © 2014 Juliet 02. All Right Reserved.
                </div>
        </footer> </div> </div>
</body>
</html>
