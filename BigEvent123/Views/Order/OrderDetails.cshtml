@model IEnumerable<BigEvent123.Models.Order>

@{
    ViewBag.Title = "Order Details for " + User.Identity.Name;
}
    <div class="managerWrapper">

<h2>@User.Identity.Name, here are your orders!</h2>

<fieldset>

        
     <table class="storeTable">
            <tr class="tableHeaders">
                <th>
                    Order ID
                </th>
                <th>
                    Order Total Price
                </th>
                <th>
                    Order Date and Time
                </th>
                <th></th>
            </tr>
            @foreach (var orders in Model)
            {              
                  <tr class="resultsTable">
                    <td>
                        @Html.DisplayFor(modelItem => orders.OrderId)
                    </td>
                    <td>
                        £@Html.DisplayFor(modelItem => orders.Total)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => orders.OrderDate)
                    </td>
                </tr>
            }

</fieldset>

        </table>
    </div>