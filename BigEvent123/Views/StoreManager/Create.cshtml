@model BigEvent123.Models.Tickets

@{
    ViewBag.Title = "Create";
}
<div class="storemanagerCreateWrapper">
    <div class="storemanagerCreateHeader">
        <h2>Create a New Ticket</h2>
    </div>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <div class="storemanagerCreateFormWrapper">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend></legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.EventId, "Select an Event")
                </div>
                <div class="store-editor-field">
                    @Html.DropDownList("EventId", String.Empty)
                    @Html.ValidationMessageFor(model => model.EventId)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.TicketName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.TicketName)
                    @Html.ValidationMessageFor(model => model.TicketName)
                </div>


                <div class="price-editor-label">
                    @Html.LabelFor(model => model.Price)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </div>


                <div class="managerDeleteBTNS">
                    <input type="submit" value="Create" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
                <br />

            </fieldset>
        }
        </div>
    </div>
